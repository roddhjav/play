abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/crowdsec
profile crowdsec @{exec_path} {
  include <abstractions/base>
  include <abstractions/ssl_certs>
  include <abstractions/nameservice-strict>

  capability dac_read_search,
  capability net_admin, # optional: no audit

  network inet dgram,
  network inet stream,
  network inet6 dgram,
  network inet6 stream,

  @{exec_path} mr,

  /etc/crowdsec/{,**} r,
  /etc/lsb-release r,

  /var/log/ r,
  /var/log/auth.log r,
  /var/log/crowdsec*.log w,
  /var/log/kern.log r,
  /var/log/syslog r,

  owner /var/lib/crowdsec/** rwlk -> /var/lib/crowdsec/**,

  owner /var/tmp/etilqs_@{hex15} rw,
  owner /var/tmp/etilqs_@{hex16} rw,

  @{run}/systemd/notify w,

  @{PROC}/sys/net/core/somaxconn r,

  include if exists <local/crowdsec>
}

# vim:syntax=apparmor
