abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/crowdsec-blocklist-mirror
profile crowdsec-blocklist-mirror @{exec_path} {
  include <abstractions/base>
  include <abstractions/ssl_certs>

  capability net_admin, # optional: no audit

  network inet stream,
  network inet6 stream,

  @{exec_path} mr,

  /etc/crowdsec/bouncers/crowdsec-blocklist-mirror.yaml r,

  /var/log/ r,
  /var/log/crowdsec-blocklist-mirror.log w,

  @{PROC}/sys/net/core/somaxconn r,

  include if exists <local/crowdsec-blocklist-mirror>
}

# vim:syntax=apparmor
