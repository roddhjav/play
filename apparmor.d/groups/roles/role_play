# The play user is a confined admin user.

abi <abi/4.0>,

include <tunables/global>

profile role_play {
  include <abstractions/base>
  include <abstractions/app/sudo>
  include <abstractions/app/systemctl>
  include <abstractions/consoles>
  include <abstractions/python>
  include <abstractions/shells>

  capability chown,
  capability fowner,
  capability fsetid,
  capability kill,
  capability sys_ptrace,
  capability sys_rawio,
  capability syslog,

  network inet dgram,
  network inet stream,
  network inet6 dgram,
  network inet6 stream,
  network netlink raw,

  ptrace read,

  signal send set=hup,
  signal receive set=hup peer=@{p_systemd},
  signal send set=(cont term) peer=systemd-tty-ask-password-agent,

  unix bind type=stream addr=@@{udbus}/bus/reboot/system,

  # FIXME: restrict this. no program need that much
  dbus bus=system, 
  dbus bus=session,

  #aa:dbus talk bus=session name=org.freedesktop.systemd1 label="@{p_systemd}"
  #aa:dbus talk bus=system name=org.freedesktop.PackageKit label=packagekitd

  @{lib}/**                    mrPix,
  @{bin}/**                    mrPix,
  /opt/*/**                    mrPix,
  /usr/share/*/**              mrPix,
  /tmp/**                      mrix,

  # As the root user is confined using the very restricted role_root profile,
  # we ensure we get root while staying in our current role_play.
  @{bin}/sudo rix,

  @{bin}/gpg rix,

  /usr/{,**} r,

  / r,
  /*{,/} rw,
  @{run}/** rwlk,
  @{HOME}/ rw,
  @{HOME}/** rwlk,
  /boot/** rwlk,
  /etc/** rwlk,
  /lib/** r,
  /mnt/** rwlk,
  /tmp/** rwlk,
  /var/** rwlk,
  /snap/** rwlk,

  /root/ r,
  /media/** r,
  /opt/** r,

  @{sys}/** r,
  @{PROC}/** r,
  /dev/** r,

  include if exists <local/role_play>
}

# vim:syntax=apparmor
