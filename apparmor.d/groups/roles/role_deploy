# The deploy user is only user to deploy the static website and therefore can only do this.

abi <abi/4.0>,

include <tunables/global>

profile role_deploy {
  include <abstractions/base>
  include <abstractions/bash-strict>
  include <abstractions/consoles>

  @{sh_path} rix,
  @{bin}/rsync rix,

        /var/www/public/ rw,
  owner /var/www/public/** rw,

  include if exists <local/role_deploy>
}

# vim:syntax=apparmor
