abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/cscli
profile cscli @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>
  include <abstractions/ssl_certs>

  network inet dgram,
  network inet stream,
  network inet6 dgram,
  network inet6 stream,

  @{exec_path} mr,

  /etc/crowdsec/{,**} r,
  /etc/crowdsec/hub/** rw,
  /etc/crowdsec/scenarios/** rw,

  owner /var/lib/crowdsec/** rwlk -> /var/lib/crowdsec/**,

  include if exists <local/cscli>
}

# vim:syntax=apparmor
